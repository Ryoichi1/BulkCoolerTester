                    <DropShadowEffect Color="#FF09A0F7" Direction="0" ShadowDepth="0" BlurRadius="20"/>
                </Label.Effect>
            </Label>
            <RadioButton x:Name="rbTH2" Content="2℃(73.82kΩ)" Height="25" Canvas.Left="11" Canvas.Top="79" Width="104"  Checked="rbTH2_Checked"/>
