                    </Setter>
                </Style>
            </Canvas.Resources>
            <Canvas.Background>
                <SolidColorBrush Color="#FF44BDEC" Opacity="0.2"/>
            </Canvas.Background>
            <TextBlock Text="{Binding RS232C_TX}" Height="55" Canvas.Left="30" Canvas.Top="142" Width="687" FontSize="14" Padding="5,0,0,0" TextWrapping="Wrap" Foreground="White">
