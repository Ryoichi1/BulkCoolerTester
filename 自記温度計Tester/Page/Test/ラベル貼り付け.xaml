<Page
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Class="自記温度計Tester.ラベル貼り付け"
	xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
	x:Name="Page"
	WindowTitle="Page"
	FlowDirection="LeftToRight"
	Height="600" Width="1300">
    <Canvas>
        <Canvas.Resources>
            <Style TargetType="Label">
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="Padding" Value="0,0,0,0"/>
                <Setter Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect Color="#FF04FFF4" BlurRadius="20" ShadowDepth="0" Direction="0"/>
                    </Setter.Value>
                </Setter>
            </Style>
        </Canvas.Resources>
        <Button x:Name="buttonReturn" Content="確認" Height="37" Canvas.Left="13" Canvas.Top="15" Width="129" Style="{DynamicResource SquareButtonStyle}" Controls:ControlsHelper.ContentCharacterCasing="Normal" FontFamily="Meiryo UI" FontWeight="Normal" HorizontalContentAlignment="Center" FontSize="18" Click="buttonReturn_Click"  />
        <Image Height="534" Canvas.Left="13" Canvas.Top="66" Width="1256" Source="/自記温度計Tester;component/Resources/ラベル貼り付け.jpg" IsEnabled="False" Opacity="0.5"/>
        <Label Height="31" Canvas.Left="949" Canvas.Top="153" Width="99" Background="#FF09F2FD" Foreground="#FF060606" HorizontalAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" BorderThickness="0" Content="1740Ne001" FontSize="16"/>
        <Label Content="{Binding DcLabel}" Height="93" Canvas.Left="34" Canvas.Top="289" Width="30" Background="#FF09F2FD" Foreground="#FF060606" FontSize="22" HorizontalAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" BorderThickness="0"/>
        <Label Content="デートコード・シリアルラベルを貼り付けてください" Height="31" Canvas.Left="166" Canvas.Top="20" Width="494" FontSize="20"/>
        <Label Height="34" Canvas.Left="662" Canvas.Top="18" Width="129" Background="#FF09F2FD" Foreground="#FF060606" HorizontalAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" BorderThickness="0" Content="1740Ne001" FontSize="20"/>
    </Canvas>
</Page>