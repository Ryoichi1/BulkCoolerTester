<Controls:MetroWindow x:Name="metroWindow" x:Class="自記温度計Tester.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:自記温度計Tester"
        GlowBrush="{DynamicResource AccentColorBrush}"
        BorderThickness="1"
        ShowTitleBar="False"
        mc:Ignorable="d"
        Height="496" Width="798.5" WindowStartupLocation="CenterScreen" AllowsTransparency="True" WindowStyle="None" Icon="Resources/VisualStudio_32x.png" HorizontalAlignment="Left" VerticalAlignment="Top" WindowTransitionsEnabled="False" >
    <Controls:MetroWindow.Resources>
        <Storyboard x:Key="sbMainWinShow">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(Panel.Background).(Brush.Opacity)" Storyboard.TargetName="metroWindow">
                <EasingDoubleKeyFrame KeyTime="0" Value="1"/>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="metroWindow">
                <EasingDoubleKeyFrame KeyTime="0" Value="0.05"/>
                <EasingDoubleKeyFrame KeyTime="0:0:1" Value="1">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <PowerEase EasingMode="EaseIn"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="SbPwaEnter">
            <ColorAnimationUsingKeyFrames Storyboard.TargetProperty="(TextElement.Foreground).(SolidColorBrush.Color)" Storyboard.TargetName="labelPwaTest">
                <EasingColorKeyFrame KeyTime="0:0:0.2" Value="#FFEC69DA"/>
            </ColorAnimationUsingKeyFrames>
            <ColorAnimationUsingKeyFrames Storyboard.TargetProperty="(Panel.Background).(SolidColorBrush.Color)" Storyboard.TargetName="metroWindow">
                <EasingColorKeyFrame KeyTime="0:0:0.2" Value="#FFEC69DA"/>
            </ColorAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="SbPwaLeave">
            <ColorAnimationUsingKeyFrames Storyboard.TargetProperty="(TextElement.Foreground).(SolidColorBrush.Color)" Storyboard.TargetName="labelPwaTest">
                <EasingColorKeyFrame KeyTime="0" Value="#FFEC69DA"/>
                <EasingColorKeyFrame KeyTime="0:0:0.1" Value="White"/>
            </ColorAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="sb本機Enter">
            <ColorAnimationUsingKeyFrames Storyboard.TargetProperty="(TextElement.Foreground).(SolidColorBrush.Color)" Storyboard.TargetName="label本機">
                <EasingColorKeyFrame KeyTime="0:0:0.2" Value="#FFEC69DA"/>
            </ColorAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="sb本機Leave">
            <ColorAnimationUsingKeyFrames Storyboard.TargetProperty="(TextElement.Foreground).(SolidColorBrush.Color)" Storyboard.TargetName="label本機">
                <EasingColorKeyFrame KeyTime="0" Value="#FFEC69DA"/>
                <EasingColorKeyFrame KeyTime="0:0:0.1" Value="White"/>
            </ColorAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="sb子機Enter">
            <ColorAnimationUsingKeyFrames Storyboard.TargetProperty="(TextElement.Foreground).(SolidColorBrush.Color)" Storyboard.TargetName="label子機">
                <EasingColorKeyFrame KeyTime="0:0:0.2" Value="#FFEC69DA"/>
            </ColorAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="sb子機Leave">
            <ColorAnimationUsingKeyFrames Storyboard.TargetProperty="(TextElement.Foreground).(SolidColorBrush.Color)" Storyboard.TargetName="label子機">
                <EasingColorKeyFrame KeyTime="0" Value="#FFEC69DA"/>
                <EasingColorKeyFrame KeyTime="0:0:0.1" Value="White"/>
            </ColorAnimationUsingKeyFrames>
        </Storyboard>
    </Controls:MetroWindow.Resources>
    <Controls:MetroWindow.Triggers>
        <EventTrigger RoutedEvent="FrameworkElement.Loaded">
            <BeginStoryboard x:Name="sbMainWinShow_BeginStoryboard" Storyboard="{StaticResource sbMainWinShow}"/>
            <BeginStoryboard x:Name="SbPwaLeave_BeginStoryboard" Storyboard="{StaticResource SbPwaLeave}"/>
            <BeginStoryboard x:Name="sb本機Enter_BeginStoryboard" Storyboard="{StaticResource sb本機Enter}"/>
            <BeginStoryboard x:Name="sb本機Leave_BeginStoryboard" Storyboard="{StaticResource sb本機Leave}"/>
            <BeginStoryboard x:Name="sb子機Enter_BeginStoryboard" Storyboard="{StaticResource sb子機Enter}"/>
            <BeginStoryboard x:Name="sb子機Leave_BeginStoryboard" Storyboard="{StaticResource sb子機Leave}"/>
        </EventTrigger>
        <EventTrigger RoutedEvent="UIElement.MouseLeave" SourceName="labelPwaTest">
            <BeginStoryboard x:Name="SbPwaEnter_BeginStoryboard" Storyboard="{StaticResource SbPwaLeave}"/>
        </EventTrigger>
        <EventTrigger RoutedEvent="UIElement.MouseEnter" SourceName="labelPwaTest">
            <BeginStoryboard x:Name="SbPwaEnter_BeginStoryboard1" Storyboard="{StaticResource SbPwaEnter}"/>
        </EventTrigger>
        <EventTrigger RoutedEvent="UIElement.MouseEnter" SourceName="label本機">
            <BeginStoryboard x:Name="sb本機Enter_BeginStoryboard1" Storyboard="{StaticResource sb本機Enter}"/>
        </EventTrigger>
        <EventTrigger RoutedEvent="UIElement.MouseLeave" SourceName="label本機">
            <BeginStoryboard x:Name="sb本機Leave_BeginStoryboard1" Storyboard="{StaticResource sb本機Leave}"/>
        </EventTrigger>
        <EventTrigger RoutedEvent="UIElement.MouseEnter" SourceName="label子機">
            <BeginStoryboard x:Name="sb子機Enter_BeginStoryboard1" Storyboard="{StaticResource sb子機Enter}"/>
        </EventTrigger>
        <EventTrigger RoutedEvent="UIElement.MouseLeave" SourceName="label子機">
            <BeginStoryboard x:Name="sb子機Leave_BeginStoryboard1" Storyboard="{StaticResource sb子機Leave}"/>
        </EventTrigger>
    </Controls:MetroWindow.Triggers>
    <Canvas x:Name="MainBack">
        <Canvas.Background>
            <RadialGradientBrush GradientOrigin="0.5,0.5" RadiusX="0.7" RadiusY="0.7" Center="0.5,0.5">
                <GradientStop Color="#FFB5E4FF"/>
                <GradientStop Color="#FF004A87" Offset="0.848"/>
                <GradientStop Color="#FF5290BD"/>
                <GradientStop Color="#FF427FB2"/>
                <GradientStop Color="#FF004A87" Offset="1"/>
                <GradientStop Color="#FF1071B4" Offset="0.595"/>
            </RadialGradientBrush>
        </Canvas.Background>

        <Label Content="自記温度計テスター" Height="71" Canvas.Left="4" Width="408.5" Foreground="#FFF7F7F7" FontSize="48" Padding="0" FontFamily="Meiryo UI" Background="{x:Null}" Canvas.Top="4.5"/>
        <Label x:Name="labelPwaTest" Content="単体テスト" Height="66" Canvas.Left="31" Canvas.Top="155" Width="176.5" Foreground="#FFF7F7F7" FontSize="36" Padding="0" FontFamily="Meiryo UI" MouseLeftButtonDown="labelPwaTest_MouseLeftButtonDown" Cursor="Hand"/>
        <Label x:Name="label本機" Content="本機(BRTR-ST)テスト" Height="66" Canvas.Left="31" Canvas.Top="251" Width="355" Foreground="#FFF7F7F7" FontSize="36" Padding="0" FontFamily="Meiryo UI" MouseLeftButtonDown="label本機_MouseLeftButtonDown" Cursor="Hand"/>
        <Label x:Name="label子機" Content="子機(BRTR-C)テスト" Height="66" Canvas.Left="31" Canvas.Top="345" Width="329.5" Foreground="#FFF7F7F7" FontSize="36" Padding="0" FontFamily="Meiryo UI" MouseLeftButtonDown="label子機_MouseLeftButtonDown" Cursor="Hand"/>
        <Image x:Name="image" Height="414" Canvas.Left="436" Canvas.Top="62" Width="355" Source="Resources/BRTR_ST.png"/>


    </Canvas>

</Controls:MetroWindow>
